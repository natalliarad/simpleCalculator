<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/toast_operation_custom"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorPrimary50">

	<ImageView
			android:id="@+id/toast_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/margin_normal"
			android:src="@drawable/ic_block_dark_red_24dp"
			android:layout_marginStart="@dimen/margin_standard"
			android:layout_marginTop="@dimen/margin_standard"
			android:layout_marginBottom="@dimen/margin_standard"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>

	<TextView
			android:id="@+id/toast_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/colorBlack"
			android:text="@string/notFoundOperationMsg"
			android:layout_marginBottom="@dimen/margin_standard"
			android:layout_marginEnd="@dimen/margin_standard"
			android:layout_marginStart="@dimen/margin_normal"
			android:layout_marginTop="@dimen/margin_standard"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/toast_icon"/>

</android.support.constraint.ConstraintLayout>